{
    "manifest_version": 3,
    "name": "Gemini Batch Image Downloader",
    "description": "Batch download full-size images generated by Google Gemini",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://lh3.googleusercontent.com/*",
        "https://lh3.google.com/*"
    ],
    "action": {
        "default_title": "Gemini Batch Downloader",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/content/index.ts"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["download-interceptor.js"],
            "matches": ["https://gemini.google.com/*"]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "cors_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}
